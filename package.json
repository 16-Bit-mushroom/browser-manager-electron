{
  "name": "browser-manager",
  "version": "1.0.0",
  "description": "A desktop browser profile manager built with Electron and Flask.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "find-free-ports": "^1.2.2"
  },
  "build": {
    "appId": "com.yourname.browsermanager",
    "productName": "Browser Manager",
    "copyright": "Copyright Â© 2025 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/**/*"
    ],
    "asar": true,
    "extraFiles": [
      {
        "from": "app/dist/browser_manager_flask_app.exe",
        "to": "resources/app-backend/browser_manager_flask_app.exe"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}